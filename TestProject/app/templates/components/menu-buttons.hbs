<!-- ///// HEADER AND ALSO THE SETTINGS BUTTON ///// -->
<p id="title">
  <span class="proid" title="Inställningar" {{action "settings"}}>Mish<small> powered by NodeJS &bull; Express &bull; EmberJS</small></span><br>
  <span class="usrlg"></span><!-- User information log -->
</p>
<!-- ///// JQUERY DIALOG ///// -->
<div id="dialog" style="display:none">DIALOG</div>
<!-- ///// PARAMETER STORE... ///// -->
<div id="backPos" style="display:none">0</div>
<div id="backImg" style="display:none"></div>
<div id="hideColor" style="display:none">rgb(85, 85, 85)</div>
<div id="hideFlag" style="display:none">1</div>
<div id="hidePicNames" title="initial setting" style="display:none">1</div>
<div id="imdbDir" title="path to album" style="display:none"></div>
<div id="imdbDirs" title="paths to albums" style="display:none"></div>
<div id="imdbLink" title="link to find albums" style="display:none"></div>
<div id="imdbRoot" title="find albums here" style="display:none"></div>
<div id="imdbRoots" title="where to find albums" style="display:none"></div>
<div id="navAuto" title="on/off autoshow" style="display:none">false</div>
<div id="navKeys" title="turn off when other use" style="display:none">true</div>
<div id="picName" style="display:none"></div>
<div id="picOrig" style="display:none"></div>
<div id="showFactor" title="initial seconds/picture" style="display:none">1</div>
<div id="sortOrder" style="display:none"></div>
<div id="temporary" style="display:none">{}</div>
<div id="topMargin" title="pixels above slideshowpic" style="display:none">15</div>
<div id="uploadNames" title="last uploaded" style="display:none"></div>
<div id="userDir" title="user's home or choice" style="display:none"></div>
<!-- ///// ...AND SETTINGS ///// -->
<div class="settings imDi">
  <!-- ///// SELECT IMAGE DB ROOT DIRECTORIY ///// -->
  <select title="Albumkatalog" class="root" onchange={{action "selectRoot" value="target.value"}}>
    {{#each imdbRoots as |rootChoice|}}
      <option onclick="this.parentElement.blur()" value={{rootChoice}} selected={{eq imdbRoot rootChoice}}>{{rootChoice}}</option>
    {{/each}}
  </select>
</div>
<!-- ///// SELECT IMAGE DB DIRECTORIY ///// -->
<p id="imDi" title=" {{imdbRoot}} <- imdb ">
  &nbsp;Albumplats: {{imdbRoot}}<br>
  <select title="Välj album att visa" class="dir" onchange={{action "selectImdbDir" value="target.value"}}>
    {{#each imdbDirs as |storeChoice|}}
      <option onclick="this.parentElement.blur()" value={{storeChoice}} selected={{eq imdbDir storeChoice}}>{{storeChoice}}</option>
    {{/each}}
  </select> &nbsp; <span class="imDi" title="Aktivt album"></span>
  <span id="imdbError" class="hide-all"> &nbsp; Just&nbsp;nu:&nbsp;oåtkomligt</span>
</p>

<!-- ///// SPECIAL PLACEHOLDERS/LINKS (hidden) ///// -->
<input style="display:none;" id="fileDialog" type="file" nwdirectory directory>

<input style="display:none" id="requestDirs" onclick={{perform requestDirs}}>
<input style="display:none" id="saveUpload" onclick={{perform saveUpload}}>

<div class="shortMessage" style="display:none">RT-log-message</div>
<a href="null" id="download" style="display:none" download>DOWNLOAD-AREA</a>

<!-- ///// DISPLAY OF THE (SLIDE) SHOW IMAGE ///// -->
<div class="img_show" style="display:none" draggable="false">
  <div id="wrap_pad" draggable="false">

    <div class="nav_links" draggable="false" ondragstart="return false">
      <!-- NEXT-ARROW-BUTTONS without href attributes -->
      <a class="nav_" draggable="false" ondragstart="return false" {{action 'showNext' true }}>&ndash;&gt;</a><br>
      <a class="nav_" draggable="false" ondragstart="return false" {{action 'showNext' false}}>&lt;&ndash;</a><br>
      <!-- AUTO-SLIDE-SHOW SELECT -->
      <a class="nav_" class="toggleAuto" draggable="false" ondragstart="return false" {{action 'toggleAuto'}} style="font-size:1.2em;font-family:monospace" title="Automatiskt0 bildbyte">AUTO</a><br>
      <!-- AUTO-SLIDE-SHOW SPEED SELECT -->
      <span class="nav_" id="showSpeed" draggable="false" ondragstart="return false">
        <input class="showTime" type="number" min="1" max="99" value="1" title="Välj tid > 0 s">s&nbsp;&nbsp;<br>
        <!-- CHOOSE AUTO-SHOW s/texline OR s/slide -->
        <a class="speedBase nav_" {{action 'speedBase'}} title="Välj per bild eller bildtextrad">&nbsp;per<br>&nbsp;text-&nbsp;<br>&nbsp;rad</a>
      </span><br>
      <!-- HELP -->
      <a class="nav_ qnav_" draggable="false" {{action 'toggleHelp' 'hideH'}}>?</a> &nbsp;
    </div>

    <div id="wrap_show" draggable="false"><!-- IMAGE AND TEXT CONTAINER -->
      <tab style="background:transparent" draggable="false">
        <tr style="background:transparent" draggable="false">
          <td style="background:transparent" draggable="false">
            <div id="link_show" draggable="false">
              <img src="" draggable="false" ondragstart="return false"> <!-- Need both, perhaps -->

              <a href="" style="top: 0%; left: 0%; width: 50%; height: 60%;" draggable="false" ondragstart="return false" {{action 'showNext' false}}><span>&lt;&ndash;<br>&nbsp;<br>&nbsp;<br>&nbsp;</span> &nbsp; föregående<br>&nbsp;<br>&nbsp;<br>&nbsp;</a>

              <a href="" style="top: 0%; left: 50%; width: 50%; height: 60%;" draggable="false" ondragstart="return false" {{action 'showNext' true}}>nästa &nbsp; <br>&nbsp;<br>&nbsp;<br>&nbsp;<span>&ndash;&gt;<br>&nbsp;<br>&nbsp;<br>&nbsp;</span></a>

              <a href="" style="top: 60%; left: 0%; width: 100%; height: 39%;" draggable="false" ondragstart="return false" id="hideShow" {{action 'hideShow'}}>återgå &nbsp; <span>Esc</span></a>

              <a id="full_size" href="" style="top:40%; left:40%; width:20%; height:20%; border-radius:12px; background-color:rgba(255,255,255,0.555);" draggable="false" ondragstart="return false" {{action 'fullSize'}}>full storlek</a>

              <div id="markShow" class="markFalseShow" alt="MARKSHOW" title="Markera" {{action 'toggleMark'}}  draggable="false" ondragstart="return false"><img src="/images/markericon.svg" draggable="false" ondragstart="return false" class="mark"></div>
            </div>
            <div class="markDummy"></div><!-- Substitutes markShow, moved up ^ -->
            <div class="img_name"></div>
            <div class="img_txt1" {{action 'editText'}}></div>
            <div class="img_txt2" {{action 'editText'}}></div>
          </td>
        </tr>
      </tab>
    </div>

  </div>
</div>

<div id="smallButtons"><!-- ///// SMALL BUTTONS without href attributes /////  -->
  <a id="questionMark" title="Växla visa-göm information" draggable="false" ondragstart="return false" {{action 'toggleHelp'}}>?</a>
  <a title="Spara ordning/gömning" draggable="false" ondragstart="return false" {{action 'saveOrder'}}>S</a>
  <a title="Återställ ordning/gömning" draggable="false" ondragstart="return false" {{action 'reFresh'}}><img draggable="false" ondragstart="return false" src="/images/reload.png"></a>
  <a id="toggleHide" title="Växla visa-göm gömda" draggable="false" ondragstart="return false" {{action 'toggleHideFlagged'}}></a>
  <a id="toggleName" title="Växla visa-göm namn" draggable="false" ondragstart="return false" {{action 'toggleNameView'}}>N</a>
  <a title="Ladda upp..." draggable="false" ondragstart="return false" {{action 'showDropbox'}}>U</a>
</div>

<img src="/images/snurra.gif" class="spinner" draggable="false" ondragstart="return false" {{action 'hideSpinner'}} style="display:none">

<div class="helpText"><!-- ///// HELP TEXT ///// -->
  <p>Visa eller göm den här informationen
    <span class="right" {{action 'toggleHelp'}} >×</span></p>
  <p>Spara ändringar (¹) som annars är tillfälliga och kan återställas (²)</p>
  <p>Återställ osparade ändringar (¹) (³) (ångerknapp)</p>
  <p>Göm eller visa gömda bilder (göm med bildens högerklick-meny)</p>
  <p>Namn på bilden &ndash; visa eller göm (filnamn utan .filtyp)</p>
  <p>Uppladdning av (fler) bilder</p>
  <p>(¹) Ändringar är: dra-och-släpp-flyttning; göm eller visa med högerklick<br>
     (²) Undantag: 'Placera först/sist' åtföljs automatiskt av 'Spara ändringar'<br>
     (³) Återställning kan även behövas vid ofullständig bildvisning efter uppladdning</p>
  <p style="padding-left:4em"><b>Redigera bildtext genom att först klicka på den!</b></p>
  <p>T A N G E N T B O R D E T
    <br>F1 = hjälpknappen: Visa eller göm den här informationen
    <br>F11: Börja eller avbryt helskärmsvisning med F11
    <br>Högerpil, vänsterpil, Esc: Växla bild med piltangenterna &ndash; avsluta med Esc-tangenten
    <br>A, Esc: Börja automatisk bildväxling med A-tangenten &ndash; avbryt med Esc-tangenten
    <br>F5, Ctrl+R: Börja om från början med F5 eller Ctrl+R om bildväxlingen kommit i oordning</p>
</div>

<!-- ///// HIDDEN MENU BUTTONS (have a history)  ///// -->
<p style="display:none">
 &nbsp; &nbsp; &nbsp;
<button id="reFresh"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="btn-std" {{action 'reFresh' true}}>Uppdatera</button>
<button id="saveOrder"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="btn-std" {{action 'saveOrder'}}>Spara ordningen</button>
<button id="showOrder"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="btn-std" {{action 'showOrder'}}>Visa ordningen</button>
<button id="imageBtn"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="btn-std show-inline" {{action 'imageList'}}>Visa bilderna</button>
<button id="showDropbox"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="show-inline btn-std" {{action 'showDropbox'}}>Visa uppladdning</button>
<!-- Should be called from the context menu exclusively: --><button id="downLoad"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="show-inline btn-std" {{action 'downLoad'}}>Download...</button>
<!-- Should be called from the context menu exclusively: --><button id="deleteFile"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="show-inline btn-std" {{action 'deleteFile'}}>DELETE</button>
</p>

<div id="highUp"></div>

<!-- ///// START OF DROPBOX AND MINI-LIST CONTAINER ///// -->
<div id="imageList" class="hide-all"><!-- THUMBNAIL CONTAINER -->
<!-- ///// DROPBOX  CONTAINER ///// -->
<div id="divDropbox" class="hide-all" >
  {{#drop-zone url='/upload' autoProcessQueue=false  acceptedFiles='image/jpeg,image/tiff,image/png,image/gif'}}
  {{/drop-zone}}
</div>

<!-- ///// GENERATE MINI IMAGES (thumbnails) ///// -->
<!-- Uses allNames from menu-buttons.js -->
<p class='showCount'>
  <span class='imDir'>{{imdbDir}}: </span>
  <span class='numShown'>0</span>&nbsp;visas,
  <span class='numHidden'>0</span>&nbsp;gömda
  (<span class='numMarked'>0</span>&nbsp;markerade)
</p>
{{#sortable-objects sortableObjectList=allNames sortEndAction='sortEndAction' enableSort=true useSwap=false}}
  {{#each allNames as |file|}}
    {{#draggable-object content=file isSortable=true overrideClass='show-inline'}}
    <div id="i{{file.name}}" class="img_mini {{file.symlink}}">
      <a {{action 'showShow' file.show file.name file.orig}}> <!-- No href -->
        <img src="{{file.mini}}" class="left-click" title="{{file.orig}}" draggable="false">
      </a>
      <div class="markFalse" alt="MARKER" title="Markera" {{action 'toggleMark' file.name}}  draggable="false" ondragstart="return false"><img src="/images/markericon.svg" draggable="false" ondragstart="return false" class="mark"></div>
      <div class="img_name">
        {{file.name}}
      </div>
      <div class="img_txt1" title="{{file.txt1}}" {{action 'editText' file.name}}>
        {{file.txt1}}
      </div>
      <div class="img_txt2" title="{{file.txt2}}" {{action 'editText' file.name}}>
        {{file.txt2}}
      </div>
    </div>
    {{/draggable-object}}
  {{else}}
    <div id="empty">
      <!-- nothing -->
    </div>
  {{/each}}
{{/sortable-objects}}

<div id="lowDown"></div>

<p class='showCount'>
  <span class="imDir">{{imdbDir}}: </span>
  <span class='numShown'>0</span>&nbsp;visas,
  <span class='numHidden'>0</span>&nbsp;gömda
  (<span class='numMarked'>0</span>&nbsp;markerade)
</p>

</div>
<!-- ///// END OF DROPBOX AND MINI-LIST CONTAINER ///// -->

<!-- ///// HIDDEN END MENU BUTTONS (have a history) ///// -->
<p style="display:none">
 &nbsp; &nbsp; &nbsp;
<button id="reFresh-1"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="btn-std" {{action 'reFresh' false}}>Uppdatera (spinner)</button>
<button style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="btn-std" {{action 'saveOrder'}}>Spara ordningen</button>
<button style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="btn-std" {{action 'showOrder'}}>Visa ordningen</button>
<button id="imageBtn-1"
  style="font-weight:bold;cursor:pointer;padding:0.5em 0;"
  type="submit" class="hide-all" {{action 'imageList'}}>Göm bilderna</button>
</p>
{{yield}}
