          {{file.name}}
        </div>
        <div class="img_txt1" title="{{file.txt1}}" {{action 'ediText' file.name}}>
          {{file.txt1}}
        </div>
        <div class="img_txt2" title="{{file.txt2}}" {{action 'ediText' file.name}}>
          {{file.txt2}}
        </div>
      </div>
      {{/draggable-object}}
    {{else}}
      <div id="empty">
        <!-- nothing -->
      </div>
    {{/each}}
  {{/sortable-objects}}
</div>

