#! /bin/bash
clear
IMDB_HOME=/home/tore
#IMDB_HOME=/mnt/sda2
#IMDB_ROOT=Demobilder
#IMDB_ROOT=MISH
IMDB_ROOT=album-1
if [[ $1 ]]; then
  IMDB_HOME=$1
  if [[ $2 ]]; then
    IMDB_ROOT=$2
  fi
fi
echo IMDB_HOME = $IMDB_HOME
echo IMDB_ROOT = $IMDB_ROOT
echo -n "##### Starting the Node server "`date`
# Note that Node may be installed as either 'node' or 'nodejs' :)
nodejs server.js $IMDB_HOME $IMDB_ROOT # Passed as/to environment variables (see server.js)
