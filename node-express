#! /bin/bash
clear
#IMDB_ROOT=Arbetsbilder
IMDB_ROOT=Demobilder
if [[ $1 ]]; then
  IMDB_ROOT=$1
fi
echo IMDB_ROOT = $HOME/$IMDB_ROOT
echo -n "##### Starting the Node server"
# Note that Node may be installed as either 'node' or 'nodejs' :)
nodejs server.js $IMDB_ROOT # Will passed as/to an environment variable (see server.js)
